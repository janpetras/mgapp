<?xml version='1.0' encoding='utf-8'?>
<widget id="com.android.mger" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <feature name="Camera">
        <param name="browser-package" value="Camera" />
    </feature>
    <feature name="Device">
        <param name="browser-package" value="Device" />
    </feature>
    <name>MGER - Photo sharing made easy</name>
    <description>
        MGER. The free image upload service.
Drag and drop anywhere you want and start uploading your images now. Fast, secure, unlimited and forever free.


    </description>
    <author email="inbox@mger.co" href="https://mger.co">
        MGER Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="24" />
</widget>
